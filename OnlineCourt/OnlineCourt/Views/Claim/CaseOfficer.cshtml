    <br />
</div>

@foreach (var claimFact in Model.ClaimFacts)
{
    <button class="accordion">@claimFact.ClaimantClaim</button>
    <div class="panel">
        <div class="topSection">
            <table style="width:100%">
                <tr>
                    <td>@claimFact.ClaimantClaimDetectedKeyPhrases @claimFact.DefendantResponseDetectedKeyPhrases</td>
                    <td>@claimFact.ClaimantClaimDetectedLanguage @claimFact.DefendantResponseDetectedLanguage</td>
                </tr>
            </table>
        </div>
        <div style="height:420px;">
            <div style="float:left;  width:58%">
