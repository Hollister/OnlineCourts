                                            <td></td>
                                            <td class="to">
                                                @res.Response
                                                <br />
                                                @res.ResponseDate
                                                <br />
                                                [Defendent]
                                            </td>
                                        </tr>
                                    }
                                }
                                </table>
                            </div>
                         </div>
                            }

                            @if (question.DefendantQuestion)
                            {
                                <button class="accordion2">@question.Question</button>
                                <div class="panel">
                                    <div style="height:300px">
                                        <table style="width:100%">
                                            @foreach (var res in question.Responses)
                                        {
                                            if (res.IsCaseOfficeResponse)
                                            {
                                                <tr>
                                                    <td class="to">
                                                        @res.Response
                                                        <br />
                                                        @res.ResponseDate
                                                        <br />
                                                        [Case Officer]
                                                    </td>
                                                </tr>
                                            }

                                            if (res.IsClaimantResponse)
                                            {
                                                <tr>
                                                    <td></td>
                                                    <td class="to">
                                                        @res.Response
                                                        <br />
                                                        @res.ResponseDate
                                                        <br />
                                                        [Claimant]
                                                    </td>
                                                </tr>
                                            }

                                            if (res.IsDefendantResponse)
                                            {
                                                <tr>
                                                    <td></td>
                                                    <td class="from">
                                                        @res.Response
                                                        <br />
                                                        @res.ResponseDate
                                                        <br />
                                                        [Defendent]
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        </table>
                                    </div>
                                </div>
                            }

                            @if (question.ClaimantQuestion)
                            {
                                <button class="accordion2">@question.Question</button>
                                <div class="panel">
                                    <div style="height:300px">
                                        <table style="width:100%">
                                            @foreach (var res in question.Responses)
                                        {
                                            if (res.IsCaseOfficeResponse)
                                            {
                                                    <tr>
                                                        <td class="to">
                                                            @res.Response
                                                            <br />
                                                            @res.ResponseDate
                                                            <br />
                                                            [Case Officer]
                                                        </td>
                                                    </tr>
                                            }

                                            if (res.IsClaimantResponse)
                                            {
                                                    <tr>
                                                        <td></td>
                                                        <td class="from">
                                                            @res.Response
                                                            <br />
                                                            @res.ResponseDate
                                                            <br />
                                                            [Claimant]
                                                        </td>
                                                    </tr>
                                            }

                                            if (res.IsDefendantResponse)
                                            {
                                                    <tr>
                                                        <td></td>
                                                        <td class="to">
                                                            @res.Response
                                                            <br />
                                                            @res.ResponseDate
                                                            <br />
                                                            [Defendent]
                                                        </td>
                                                    </tr>
                                            }
                                        }
                                        <tr><td><br/></td></tr>
                                        <tr>
                                             <td colspan="2">
                                                <table style="width:100%; height:20px">
                                                    <tr>
                                                        <td style="width:10%"><b>Reply</b></td>
                                                        <td style="width:80%; padding-right:5px;">
                                                            @Html.TextBox("Reply", "", new { style= "width:100%;  max-width:100% !important; height:30px;" })
                                                        </td>
                                                        <td style="width:10%">
                                                            <a class="btn btn-default" href="#">
                                                                <i class="fa fa-reply"></i> Post
                                                            </a>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        </table>

                                    </div>
                                </div>
                            }
                        </div>
                    }
            </div>
            <div style="float:right; width:38%;">
                <p>
                    <h3>Case Officer Evaluation</h3>

                    <table style="width:100%">
                        <tr>
                            <td>@Html.TextArea("Description", null, new { @class = "form-control" })</td>
                            <td>
                                <a class="btn btn-default" href="#">
                                    <i class="fa fa-reply"></i> Post
                                </a>
                            </td>
                        </tr>
                    </table>
                </p>
                <p>
                    <h3>Support Documentation</h3>
                    Documents Here
                </p>
            </div>  
        </div>
    </div>
}

